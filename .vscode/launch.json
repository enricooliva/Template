{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Esecuzione di Chrome su localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/template-frontend"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Mock Idp",
            "program": "${workspaceFolder}\\start.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}